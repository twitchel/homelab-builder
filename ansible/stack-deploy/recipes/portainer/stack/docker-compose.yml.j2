version: '3.2'

services:
  agent:
    image: "portainer/agent:{{ services.portainer.version.agent }}"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: "portainer/portainer-ce:{{ services.portainer.version.portainer }}"
    command: -H tcp://tasks.agent:9001 --tlsskipverify
    volumes:
      - {{ storage.root_dir }}/appdata/portainer:/data
    networks:
      - cloud-public
      - agent_network
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]
      labels:
        - "traefik.enable=true"
        - "traefik.swarm.network=cloud-public"
        # HTTP Routers
        - "traefik.http.routers.portainer-rtr.entrypoints=websecure"
        - "traefik.http.routers.portainer-rtr.rule=Host(`{{ services.portainer.domain }}`)"
        # HTTP Services
        - "traefik.http.routers.portainer-rtr.service=portainer-svc"
{% if services.portainer.auth_enabled == true %}
        - "traefik.http.routers.portainer-rtr.middlewares=middlewares-authentik@file"
{% endif %}
        - "traefik.http.services.portainer-svc.loadbalancer.server.port=9000"


networks:
  agent_network:
    driver: overlay
    attachable: true
  cloud-public:
    external: true
